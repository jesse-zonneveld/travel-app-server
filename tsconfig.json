{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["es6", "dom"],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "config/**/*.ts"],
    "exclude": ["node_modules"]
}
